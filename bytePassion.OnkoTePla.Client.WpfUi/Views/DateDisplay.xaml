<UserControl x:Class="bytePassion.OnkoTePla.Client.WPFVisualization.Views.DateDisplay"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:dateDisplay="clr-namespace:bytePassion.OnkoTePla.Client.WPFVisualization.ViewModels.DateDisplay"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="150">
	
	<d:DesignData.DataContext>
		<dateDisplay:DateDisplayViewModelSampleData/>
	</d:DesignData.DataContext>

    <StackPanel Orientation="Horizontal">
        <TextBlock Text="{Binding Date}"
                       Margin="5"
					   FontFamily="{StaticResource StandardFontFamily}"
                       Foreground="{StaticResource SemiTransparentWhiteBrush}"
					   HorizontalAlignment="Center"
					   VerticalAlignment="Center"
					   FontSize="20"/>
    </StackPanel>
</UserControl>
