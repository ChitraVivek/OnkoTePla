<UserControl x:Class="bytePassion.OnkoTePla.Client.WpfUi.Views.AppointmentViewToolTip"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:appointmentView="clr-namespace:bytePassion.OnkoTePla.Client.WpfUi.ViewModels.AppointmentView"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             d:DesignHeight="42"
             d:DesignWidth="300"
             mc:Ignorable="d">

    <d:DesignData.DataContext>
        <appointmentView:AppointmentViewModelSampleData />
    </d:DesignData.DataContext>

    <Border Background="White"
            BorderBrush="DarkGray"
            BorderThickness="1">

		<StackPanel>

			<TextBlock FontFamily="Segoe UI Semibold"
				       Margin="10,5,10,0"
                       Foreground="#404148"
                       Text="{Binding PatientDisplayName}"
                       TextWrapping="Wrap" 
				       HorizontalAlignment="Left"
				       VerticalAlignment="Center"/>
			
			<TextBlock FontFamily="Segoe UI Semibold"
				       Margin="10,5"
                       Foreground="#404148"
                       Text="{Binding Description}"
                       TextWrapping="Wrap" 
				       HorizontalAlignment="Left"
				       VerticalAlignment="Center"/>

		</StackPanel>
		
		

	</Border>
</UserControl>
