<controls:MetroWindow x:Class="bytePassion.OnkoTePla.Client.WpfUi.Views.PrintDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"      
        xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls"
        xmlns:printDialog="clr-namespace:bytePassion.OnkoTePla.Client.WpfUi.ViewModels.PrintDialog"
        mc:Ignorable="d"
		Width="1000"
        Height="720"
        ResizeMode="NoResize"
        ShowTitleBar="False"
        WindowStartupLocation="CenterOwner"
        WindowStyle="ToolWindow"
        Title="PrintDialog">
	
	<d:DesignData.DataContext>
		<printDialog:PrintDialogViewModelSampleData/>
	</d:DesignData.DataContext>
	
    <Grid>
        
		<Grid.RowDefinitions>
			<RowDefinition/>
			<RowDefinition Height="40"/>
		</Grid.RowDefinitions>

		<StackPanel Orientation="Horizontal"
					Grid.Row="1"
					Margin="5"
					FlowDirection="RightToLeft">

			<Button Width="120"
					Content="Cancel"
					Command="{Binding Cancel}"/>

			<Button Width="120"					
					Content="Print"
					Command="{Binding Print}"/>
			
		</StackPanel>
		
		
		
    </Grid>
</controls:MetroWindow>
