<controls:MetroWindow x:Class="bytePassion.OnkoTePla.Client.WpfUi.Views.EditDescription"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:bytePassion.OnkoTePla.Client.WpfUi.Views"
             xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls"
             mc:Ignorable="d" 
             Height="300" Width="500">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition Height="20"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
        </Grid.RowDefinitions>
            <TextBox VerticalAlignment="Stretch" Grid.Row="0" Text ="{Binding Description}"></TextBox>
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="ok" Width="80" Margin="10,0"></Button>
            <Button Content="cancel" Width="80"></Button>
        </StackPanel>
    </Grid>
</controls:MetroWindow>
