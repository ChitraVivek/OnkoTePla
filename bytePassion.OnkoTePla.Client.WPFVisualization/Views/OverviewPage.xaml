<UserControl x:Class="bytePassion.OnkoTePla.Client.WPFVisualization.Views.OverviewPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:bytePassion.OnkoTePla.Client.WPFVisualization.Views"
             xmlns:overviewPage="clr-namespace:bytePassion.OnkoTePla.Client.WPFVisualization.ViewModels.OverviewPage"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="900">

    <d:UserControl.DataContext>
        <overviewPage:OverviewPageViewModelSampleData/>
    </d:UserControl.DataContext>

    <Grid Background="White">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="20" />
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="0"
			  Background="Blue">

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition/>
            </Grid.RowDefinitions>


            <local:MedicalPracticeSelector Grid.Row="0"
										   Margin="5"
										   DataContext="{Binding MedicalPracticeSelectorViewModel}"/>

            <local:RoomSelector Grid.Row="1"
								Margin="5"											
								DataContext="{Binding RoomSelectorViewModel}"/>

            <local:DateSelector Grid.Row="2"
								DataContext="{Binding DateSelectorViewModel}"/>

        </Grid>

        <local:GridContainer Grid.Column="1"
							 Margin="5"
							 DataContext="{Binding GridContainerViewModel}"/>
    </Grid>
</UserControl>
