			        BorderBrush="White"
			        BorderThickness="2"
			        CornerRadius="16">
				<Image Margin="6" Source="{TemplateBinding Content}" />
			</Border>
		</ControlTemplate>
	</Window.Resources>

	<d:Window.DataContext>		
		<sampleData:MainWindowViewModelSampleData />
	</d:Window.DataContext>

