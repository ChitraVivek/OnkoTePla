<Window x:Class="bytePassion.OnkoTePla.Client.NetworkTest.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:bytePassion.OnkoTePla.Client.NetworkTest"
        xmlns:mainWindow="clr-namespace:bytePassion.OnkoTePla.Client.NetworkTest.ViewModels.MainWindow"
        mc:Ignorable="d"
        Title="MainWindow" Height="150" Width="525">
    
    
    <d:DesignData.DataContext>
        <mainWindow:MainWindowViewModelSampleData/>
    </d:DesignData.DataContext>
    <Grid>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        
        <Button Grid.Column="0"
                Command="{Binding DoSomeThing}"
                Margin="30"
                Content="Do Something"/>
        
        <TextBlock Grid.Column="1"
                   Text="{Binding Text}"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   FontSize="20"></TextBlock>
        
    </Grid>
</Window>

    