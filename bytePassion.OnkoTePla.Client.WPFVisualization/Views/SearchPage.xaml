<UserControl x:Class="bytePassion.OnkoTePla.Client.WPFVisualization.Views.SearchPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:bytePassion.OnkoTePla.Client.WPFVisualization.Views"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:searchPage="clr-namespace:bytePassion.OnkoTePla.Client.WPFVisualization.ViewModels.SearchPage"
             mc:Ignorable="d">

    <d:DesignData.DataContext>
        <searchPage:SearchPageViewModelSampleData />
    </d:DesignData.DataContext>

    <Grid Background="White">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <local:PatientSelector Grid.Column="0" DataContext="{Binding}" />
        <local:PatientDetailView Grid.Column="1"
                                 Margin="20"
                                 DataContext="{Binding}" />
    </Grid>
</UserControl>
